{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for post in posts %}
				<div class="col-md-4">
					<div class="card">
						<img src="{{post.image}}" class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{post.title}}</h5>
							<p class="card-text">{{post.content}}</p>
							<p>{{post.author}}
								-
								{{post.createdAt |date("d/m/Y")}}</p>
							<a href="/posts/{{post.id}}" class="btn btn-primary">More Infos</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
